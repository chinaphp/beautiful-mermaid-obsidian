{
  "name": "beautiful-mermaid-obsidian",
  "version": "1.0.3",
  "description": "Beautiful Mermaid diagrams using lukilabs/beautiful-mermaid with 15+ built-in themes and enhanced aesthetics.",
  "main": "main.js",
  "scripts": {
    "dev": "bun run esbuild.config.mjs",
    "build": "bun run esbuild.config.mjs production",
    "lint": "eslint .",
    "type-check": "tsc -noEmit -skipLibCheck",
    "release": "bun run build && node version-bump.mjs",
    "version": "node version-bump.mjs && git add manifest.json versions.json"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "mermaid",
    "diagram",
    "visualization"
  ],
  "author": "Coffee",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9",
    "@eslint/json": "0.14.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@typescript-eslint/utils": "^8.35.1",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "eslint": "^9",
    "eslint-plugin-obsidianmd": "^0.1.9",
    "obsidian": "latest",
    "tslib": "2.4.0",
    "typescript": "5.4.5",
    "typescript-eslint": "^8.35.1"
  }
}
