{
  "name": "beautiful-mermaid-obsidian",
  "version": "1.0.0",
  "description": "Beautiful Mermaid rendering plugin for Obsidian using lukilabs/beautiful-mermaid",
  "main": "main.js",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "dev:bun": "bun run esbuild.config.mjs",
    "build:bun": "bun run esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "mermaid",
    "diagram",
    "visualization"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "obsidian": "latest",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  }
}
